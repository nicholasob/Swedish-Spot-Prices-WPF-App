<Window x:Name="Settings" x:Class="spotprice2.settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spotprice2"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        mc:Ignorable="d"
        Title="Settings" Height="206" Width="213" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="powerAreaComboBox" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Width="188">
            <ComboBoxItem Content="SN1"/>
            <ComboBoxItem Content="SN2"/>
            <ComboBoxItem Content="SN3"/>
            <ComboBoxItem Content="SN4"/>
        </ComboBox>
        <Label x:Name="powerarealabel" Content="Power Area" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <xctk:ColorPicker x:Name="ColorPicker"
                           VerticalAlignment="Top" Margin="13,82,13,0" Height="25" />
        <Button x:Name="ApplyButton" Content="Apply" HorizontalAlignment="Center" VerticalAlignment="Top" Width="63" Height="30" Click="ApplyButton_Click" Margin="0,134,0,0"/>
        <Label x:Name="ColorLabel" Content="Text color&#xD;&#xA;" HorizontalAlignment="Left" Margin="13,58,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
